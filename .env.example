# ============================================================
# Pasanaku API - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================================

# --- Project ---
DEBUG=False
PROJECT_NAME="Pasanaku API"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# --- Database ---
# Format: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://pasanaku_user:pasanaku_pass@localhost:5432/pasanaku_db

# --- Security ---
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- CORS ---
# Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:8080
